<!DOCTYPE html>
<html lang="en">
	<head>
		<% include head %>
		<title><%= title %></title>
	</head>
	<body>
		<header>
			<h1><%= title %></h1>
		</header>
		<main>
			<div class="button-container">
				<a href="/category/create" class="button">NEW CATEGORY</a>
				<a href="/item/create" class="button">NEW ITEM</a>
			</div>
			<div class="category-container">
				<% categories.forEach(category => {%>
				<a href="<%= category.url%>" class="category-card">
					<%= category.name%>
				</a>
				<% }) %>
			</div>
		</main>
	</body>
</html>
